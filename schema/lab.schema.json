{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/haje01/loglab/lab.schema.json",
    "title": "Lab",
    "description": "Loglab lab file",
    "type": "object",
    "$defs": {
        "ref-type-body": {
            "anyOf": [
                {"enum": ["string", "integer", "number", "boolean", "datetime"]},
                {
                    "type": "string",
                    "pattern": "^types\\.[a-zA-Z0-9_]+"
                }
            ]
        },
        "dict-field-body": {
            "allOf": [
                {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "필드 이름"
                        },
                        "desc": {
                            "type": "string",
                            "description": "필드 설명"
                        },
                        "option": {
                            "type": "boolean",
                            "description": "옵션 여부"
                        }
                    },
                    "required": ["name", "desc"]
                },
                {"$ref": "#/$defs/type-rstr-body"}
            ]
        },
        "type-rstr-body": {
            "anyOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "const": "string"
                        },
                        "pattern": {
                            "type": "string",
                            "description": "문자열 정규식 패턴"
                        },
                        "enum": {
                            "type": "array",
                            "description": "허용하는 나열값",
                            "items": {
                                "anyOf": [
                                    {"type": "string"},
                                    {
                                        "type": "array",
                                        "items": [
                                            {"type": "string"},
                                            {"type": "string"}
                                        ]
                                    }
                                ]
                            }
                        },
                        "minLength": {
                            "type": "integer",
                            "description": "문자열 최소 길이",
                            "minimum": 1
                        },
                        "maxLength": {
                            "type": "integer",
                            "description": "문자열 최대 길이",
                            "minimum": 1
                        },
                        "format": {
                            "description": "기정의된 문자열 포맷",
                            "enum": [
                                "date-time", "date", "email", "hostname", "ipv4", "ipv6", "uri"
                            ]
                        }
                    },
                    "required" : ["type"]
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "const": "integer"
                        },
                        "minimum": {
                            "type": "integer",
                            "description": "포함하는 최소값"
                        },
                        "maximum": {
                            "type": "integer",
                            "description": "포함하는 최대값"
                        },
                        "exclusiveMinimum": {
                            "type": "integer",
                            "description": "제외하는 최소값"
                        },
                        "exclusiveMaximum": {
                            "type": "integer",
                            "description": "제외하는 최대값"
                        },
                        "enum": {
                            "type": "array",
                            "description": "허용하는 나열값",
                            "items": {
                                "anyOf": [
                                    {"type": "integer"},
                                    {
                                        "type": "array",
                                        "items": [
                                            {"type": "integer"},
                                            {"type": "string"}
                                        ]
                                    }
                                ]
                            }
                        }
                    },
                    "required": ["type"]
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "const": "number"
                        },
                        "minimum": {
                            "type": "number",
                            "description": "포함하는 최소값"
                        },
                        "maximum": {
                            "type": "number",
                            "description": "포함하는 최대값"
                        },
                        "exclusiveMinimum": {
                            "type": "integer",
                            "description": "제외하는 최소값"
                        },
                        "exclusiveMaximum": {
                            "type": "integer",
                            "description": "제외하는 최대값"
                        },
                        "enum": {
                            "type": "array",
                            "description": "허용하는 나열값",
                            "items": {
                                "anyOf": [
                                    {"type": "number"},
                                    {
                                        "type": "array",
                                        "items": [
                                            {"type": "number"},
                                            {"type": "string"}
                                        ]
                                    }
                                ]
                            }
                        }
                    },
                    "required": ["type"]
                }
            ]
        },
        "field-body": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "array",
                        "items": [
                            {"type": "string"},
                            {"$ref": "#/$defs/ref-type-body"},
                            {"type": "string"},
                            {"type": "boolean"}
                        ],
                        "minItems": 3,
                        "maxItems": 5
                    },
                    {"$ref": "#/$defs/dict-field-body"}
                ]
            }
        },
        "entity-body": {
            "type": "object",
            "patternProperties": {
                "[a-z]+": {
                    "type": "object",
                    "properties": {
                        "desc": {
                            "description": "엔터티 설명",
                            "type": "string"
                        },
                        "mixins": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "fields": {
                            "$ref": "#/$defs/field-body"
                        }
                    },
                    "additionalProperties": false,
                    "required": ["desc"]
                }
            },
            "additionalProperties": false
        },
        "type-body": {
            "type": "object",
            "patternProperties": {
                "[a-z]+": {
                    "allOf": [
                        {
                            "type": "object",
                            "properties": {
                                "desc": {
                                    "type": "string",
                                    "description": "타입 설명"
                                }
                            },
                            "required": ["desc"]
                        },
                        {"$ref": "#/$defs/type-rstr-body"}
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Schema URI"
        },
        "domain": {
            "description": "스키마 도메인 정보",
            "type": "object",
            "properties": {
                "name": {
                    "description": "도메인 이름",
                    "type": "string"
                },
                "desc": {
                    "description": "도메인 설명",
                    "type": "string"
                }
            },
            "required": ["name"]
        },
        "types": {
            "description": "커스텀 타입",
            "$ref": "#/$defs/type-body"
        },
        "bases": {
            "description": "기본 엔터티",
            "$ref": "#/$defs/entity-body"
        },
        "events": {
            "description": "기본 엔터티",
            "$ref": "#/$defs/entity-body"
        }
    },
    "required": ["events"],
    "additionalProperties": false
}