{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/haje01/loglab/lab.schema.json",
    "title": "Lab",
    "description": "Loglab lab file",
    "type": "object",
    "$defs": {
        "field-body": {
            "type": "array",
            "items": {
                "type": "array",
                "items": [
                    {"type": "string"},
                    {
                        "enum": ["string", "integer", "number", "boolean", "datetime"]
                    },
                    {"type": "string"},
                    {"type": "boolean"}
                ],
                "minItems": 3,
                "maxItems": 5
            }
        },
        "entity-body": {
            "type": "object",
            "patternProperties": {
                "[a-z]+": {
                    "type": "object",
                    "properties": {
                        "desc": {
                            "description": "엔터티 설명",
                            "type": "string"
                        },
                        "mixins": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "fields": {
                            "$ref": "#/$defs/field-body"
                        }
                    },
                    "additionalProperties": false,
                    "required": ["desc"]
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Schema URI"
        },
        "domain": {
            "description": "스키마 도메인 정보",
            "type": "object",
            "properties": {
                "name": {
                    "description": "도메인 이름",
                    "type": "string"
                },
                "desc": {
                    "description": "도메인 설명",
                    "type": "string"
                }
            },
            "required": ["name"]
        },
        "bases": {
            "description": "기본 엔터티",
            "$ref": "#/$defs/entity-body"
        },
        "events": {
            "description": "기본 엔터티",
            "$ref": "#/$defs/entity-body"
        }
    },
    "required": ["events"],
    "additionalProperties": false
  }