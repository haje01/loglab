{
    "$schema": "file:///home/ubuntu/works/loglab/schema/lab.schema.json",
    "domain": {
        "name": "foo",
        "desc": "위대한 모바일 게임"
    },
    "bases": {
        "AcntEvent": {
            "desc": "계정 정보",
            "fields": [
                ["AcntId", "string", "계정 ID"]
            ]
        },
        "CharEvent": {
            "desc": "캐릭터 정보",
            "mixins": ["bases.AcntEvent"],
            "fields": [
                ["CharId", "string", "캐릭터 ID"]
            ]
        },
        "PosEvent": {
            "desc": "위치 정보",
            "fields": [
                ["PosX", "number", "캐릭터 X 위치"],
                ["PosY", "number", "캐릭터 Y 위치"],
                ["PosZ", "number", "캐릭터 Z 위치"]
            ]
        },
        "CharPosEvent": {
            "desc": "캐릭터 위치 정보",
            "mixins": ["bases.CharEvent", "bases.PosEvent"]
        },
        "ItemEvent": {
            "desc": "아이템 정보",
            "fields": [
                ["ItemTypeId", "integer", "아이템 타입 ID"],
                ["ItemInstId", "integer", "아이템 인스턴스 ID"]
            ]
        },
        "MonsterEvent": {
            "desc": "몬스터 정보",
            "fields": [
                ["MonsterTypeId", "integer", "몬스터 타입 ID"],
                ["MonsterInstId", "integer", "몬스터 인스턴스 ID"]
            ]
        }
    },
    "events": {
        "Login": {
            "desc": "로그인",
            "mixins": ["bases.AcntEvent"]
        },
        "Logout": {
            "desc": "로그아웃",
            "mixins": ["bases.AcntEvent"],
            "fields": [
                ["PlayTime", "integer", "플레이 시간(초)", true]
            ]
        },
        "CharLogin": {
            "desc": "캐릭터 로그인",
            "mixins": ["bases.CharPosEvent"]
        },
        "CharLogout": {
            "desc": "캐릭터 로그아웃",
            "mixins": ["bases.CharPosEvent"],
            "fields": [
                ["PlayTime", "integer", "플레이 시간(초)", true]
            ]
        },
        "KillMonster": {
            "desc": "몬스터 잡음",
            "mixins": ["bases.CharPosEvent", "bases.MonsterEvent"]
        },
        "MonsterDropItem": {
            "desc": "몬스터가 아이템을 떨어뜨림",
            "mixins": ["bases.MonsterEvent", "bases.ItemEvent"]
        },
        "ItemGet": {
            "desc": "아이템 습득",
            "mixins": ["bases.CharPosEvent", "bases.ItemEvent"]
        },
        "LeaveMap": {
            "desc": "맵 떠남",
            "mixins": ["bases.CharPosEvent"]
        },
        "EnterMap": {
            "desc": "맵 들어옴",
            "mixins": ["bases.CharPosEvent"]
        }
    }
}