{
	"$schema": "https://raw.githubusercontent.com/haje01/loglab/master/schema/lab.schema.json",
	"domain": {
		"name": "foo",
		"desc": "위대한 모바일 게임"
	},
    "types": {
        "Id": {
            "type": "integer",
            "desc": "Id 타입",
            "minimum": 0
        }
    },
	"bases": {
		"Server": {
			"desc": "서버 정보",
			"fields": [
				{
                    "name": "ServerNo",
                    "desc": "서버 번호",
                    "type": "integer",
                    "minimum": 1,
                    "exclusiveMaximum": 100
                }
			]
		},
		"Account": {
			"desc": "계정 정보",
			"mixins": ["bases.Server"],
			"fields": [
                ["AcntId", "types.Id", "계정 ID"]
			]
		},
		"Character": {
			"desc": "캐릭터 정보",
			"mixins": ["bases.Account"],
			"fields": [
                ["CharId", "types.Id", "캐릭터 ID"]
			]
		},
		"Position": {
			"desc": "맵상의 위치 정보",
			"fields": [
				["MapId", "types.Id", "맵 번호"],
				["PosX", "number", "맵상 X 위치"],
				["PosY", "number", "맵상 Y 위치"],
				["PosZ", "number", "맵상 Z 위치"]
			]
		},
		"Monster": {
			"desc": "몬스터 정보",
            "mixins": ["bases.Server"],
			"fields": [
				["MonTypeId", "types.Id", "몬스터 타입 ID"],
				["MonInstId", "types.Id", "몬스터 인스턴스 ID"]
			]
		},
		"Item": {
			"desc": "아이템 정보",
            "mixins": ["bases.Server"],
			"fields": [
                {
                    "name": "ItemTypeId",
                    "type": "integer",
                    "desc": "아이템 타입 ID",
                    "enum": [
                        [1, "칼"],
                        [2, "방패"],
                        [3, "물약"]
                    ]
                },
                ["ItemInstId", "types.Id", "아이템 인스턴스 ID"],
                {
                    "name": "ItemName",
                    "type": "string",
                    "desc": "아이템 이름",
                    "maxLength": 7,
                    "pattern": "^Itm.*"
                }
			]
		}
	},
	"events": {
		"Login": {
			"desc": "계정 로그인",
			"mixins": ["bases.Account"],
            "fields": [
                {
                    "name": "Platform",
                    "desc": "디바이스의 플랫폼",
                    "type": "string",
                    "enum": [
                        "ios", "aos"
                    ]
                }
            ]
		},
		"Logout": {
			"desc": "계정 로그아웃",
			"mixins": ["bases.Account"],
			"fields": [
				["PlayTime", "number", "플레이 시간 (초)", true]
			]
		},
		"CharLogin": {
			"desc": "캐릭터 로그인",
			"mixins": ["bases.Character"]
		},
		"CharLogout": {
			"desc": "캐릭터 로그아웃",
			"mixins": ["bases.Character", "events.Logout"]
		},
		"KillMonster": {
			"desc": "몬스터를 잡음",
			"mixins": ["bases.Character", "bases.Position", "bases.Monster"]
		},
		"MonsterDropItem": {
			"desc": "몬스터가 아이템을 떨어뜨림",
			"mixins": ["bases.Monster", "bases.Position", "bases.Item"]
		},
		"GetItem": {
			"desc": "캐릭터의 아이템 습득",
			"mixins": ["bases.Character", "bases.Position", "bases.Item"]
		}
	}
}
